rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Helper functions
      function isAuth() {
        return request.auth != null;
      }
      
      function isImage() {
        return request.resource.contentType.matches('image/.*');
      }
      
      function isVideo() {
        return request.resource.contentType.matches('video/.*');
      }
      
      function isValidSize() {
        // Max 50MB for videos, 5MB for images
        return (isImage() && request.resource.size < 5 * 1024 * 1024) ||
               (isVideo() && request.resource.size < 50 * 1024 * 1024);
      }

      // Allow read for authenticated users
      allow read: if isAuth();

      // Allow write if authenticated, valid type, and valid size
      allow write: if isAuth() && isValidSize();
    }
  }
}
